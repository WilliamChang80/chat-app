{
    "extends": [
        "airbnb-typescript",
        "prettier",
        "plugin:import/errors",
        "plugin:import/warnings"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "settings": {
        "import/resolver": {
            "node": {
                "paths": [
                    "src"
                ]
            }
        }
    },
    "rules": {
        "react/jsx-filename-extension": "off"
    }
}